root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 79
trim_trailing_whitespace = true

# Python
[*.py]
insert_final_newline = true

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

[Makefile]
indent_style = tab